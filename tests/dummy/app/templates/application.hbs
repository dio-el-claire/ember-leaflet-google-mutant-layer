<style type="text/css">
  html, body {
    height: 100%;
    margin: 0;
    padding: 0;
  }

  .container {
  	width:100%;
  	height:calc(100% - 40px);
  	position:absolute;
  }

	.leaflet-container {
		height:100%;
	}

	.buttons {
		width: 100%;
		height: 40px;
		position: absolute;
		left:0;
		bottom: 0;
		text-align: center;
	}
	button {
		margin: 10px 5px 0 5px;
	}
</style>

<div class="container">
  <LeafletMap @lat={{this.lat}} @lng={{this.lng}} @zoom={{this.zoom}} as |layers|>
    <layers.google-mutant
      @type="TERRAIN"
	  	@isTrafficOn={{this.isTrafficOn}}
	  	@isTransitOn={{this.isTransitOn}}
	  	@isBicyclingOn={{this.isBicyclingOn}}
	  	@isKmlOn={{this.isKmlOn}}
	  	@kmlLayerOptions={{this.geoRSSOptions}}
	  	@continuousWorld={{true}}
	  	@noWrap={{true}}/>
  </LeafletMap>
</div>

<div class="buttons">
  <button type="button" {{on "click" this.toggleTraffic}}>
    {{#if this.isTrafficOn}}
      Hide traffic
    {{else}}
      Show traffic
    {{/if}}
  </button>

  <button type="button" {{on "click" this.toggleTransit}}>
    {{#if this.isTransitOn}}
      Hide transit
    {{else}}
      Show transit
    {{/if}}
  </button>

  <button type="button" {{on "click" this.toggleBicycle}}>
    {{#if this.isBicyclingOn}}
      Hide bicycling layer
    {{else}}
      Show bicycling layer
    {{/if}}
  </button>

  <button type="button" {{on "click" this.toggleRSS}}>
    {{#if this.isKmlOn}}
      Hide geo rss
    {{else}}
      Show geo rss
    {{/if}}
  </button>
</div>
