<style type="text/css">
  html, body {
    height: 100%;
    margin: 0;
    padding: 0;
  }

  .container {
  	width:100%;
  	height:calc(100% - 40px);
  	position:absolute;
  }

	.leaflet-container {
		height:100%;
	}

	.buttons {
		width: 100%;
		height: 40px;
		position: absolute;
		left:0;
		bottom: 0;
		text-align: center;
	}
	button {
		margin: 10px 5px 0 5px;
	}
</style>
<div class="container">
  {{#leaflet-map lat=lat lng=lng zoom=zoom}}
    {{google-mutant-layer type="TERRAIN"
	  	isTrafficOn=isTrafficOn
	  	isTransitOn=isTransitOn
	  	isBicyclingOn=isBicyclingOn
	  	isKmlOn=isKmlOn
	  	kmlLayerOptions=geoRSSOptions
	  	continuousWorld=true
	  	noWrap=true}}
  {{/leaflet-map}}
</div>
<div class="buttons">
  <button {{action "toggleTraffic"}}>
    {{#if isTrafficOn}}
      Hide traffic
    {{else}}
      Show traffic
    {{/if}}
  </button>
  <button {{action "toggleTransit"}}>
    {{#if isTransitOn}}
      Hide transit
    {{else}}
      Show transit
    {{/if}}
  </button>
  <button {{action "toggleBicycle"}}>
    {{#if isBicyclingOn}}
      Hide bicycling layer
    {{else}}
      Show bicycling layer
    {{/if}}
  </button>
  <button {{action "toggleRSS"}}>
    {{#if isKmlOn}}
      Hide geo rss
    {{else}}
      Show geo rss
    {{/if}}
  </button>
</div>
